<div id="message_form">
  <h2>Feel Free To <a href="mailto:david@nationalwaterservice.com">EMAIL US</a> <br>Or<br>Message Us:</h2>
  <%= form_for Message.new do |f| %>
    <div class="field">
      <h3>Name: </h3>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="field">
      <h3>Email: </h3>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="field">
      <h3>Subject: </h3>
      <%= f.text_field :subject, class: 'form-control' %>
    </div>

    <div class="field">
      <h3>Body: </h3>
      <%= f.text_area :content, class: 'form-control', rows: "10" %>
    </div>

    <div class="actions">
      <%= f.submit 'Send', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

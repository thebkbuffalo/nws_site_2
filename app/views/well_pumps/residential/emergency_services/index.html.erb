<h1 class="text-center">Emergency Service</h1>

<% if current_user %>
  <h3><%= link_to 'New Picture', '/well_pumps/residential/emergency_services/new' %></h3>
<% end %>

<% @emergency_services.each do |emergency| %>
  <div class='images'>
    <%= link_to image_tag(emergency.emergency_pic.url(:medium)), emergency.emergency_pic.url, rel: 'lightbox' %>
    <% if current_user %>
      <h4><%= link_to 'DELETE', "/well_pumps/residential/emergency_services/#{emergency.id}", method: :delete, data: { confirm: 'Are you sure?' } %></h4>
    <% end %>
  </div>
<% end %>

<h1 class='back'><%= link_to 'Back', '/well_pumps/residential' %></h1>

<h1 class="text-center">NEW SERVICE LINES</h1>

<% if current_user %>
  <h3><%= link_to 'New Pic', '/well_pumps/residential/new_service_lines/new' %></h3>
<% end %>

<% @new_service_lines.each do |nsl| %>
  <div class='images'>
    <%= link_to image_tag(nsl.nsl_pic.url(:medium)), nsl.nsl_pic.url, rel: 'lightbox' %>
    <% if current_user %>
      <h4><%= link_to 'DELETE', "/well_pumps/residential/new_service_lines/#{nsl.id}", method: :delete, data: { confirm: 'Are you sure?' } %></h4>
    <% end %>
  </div>
<% end %>

<h1 class='back'><%= link_to 'Back', '/well_pumps/residential' %></h1>

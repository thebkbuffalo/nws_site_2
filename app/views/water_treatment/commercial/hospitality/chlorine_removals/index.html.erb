<h1 class="text-center">Chlorine Removal</h1>
<% if current_user %>
  <h3><%= link_to 'New Picture', '/water_treatment/commercial/hospitality/chlorine_removals/new' %></h3>
<% end %>

<% @chlorine_removals.each do |chlorine| %>
  <div class='images'>
    <%= link_to image_tag(chlorine.chlorine_pic.url(:medium)), chlorine.chlorine_pic.url, rel: 'stylesheet' %>
    <% if current_user %>
      <h4><%= link_to 'DELETE', "/water_treatment/commercial/hospitality/chlorine_removals/#{chlorine.id}", method: :delete, data: { confirm: 'Are you sure?' } %></h4>
    <% end %>
  </div>
<% end %>

<h1 class='back'><%= link_to 'Back', '/water_treatment/commercial/hospitality' %></h1>

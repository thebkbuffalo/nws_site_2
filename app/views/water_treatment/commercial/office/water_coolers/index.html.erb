<h1 class="text-center">WATER COOLERS</h1>
<% if current_user %>
  <h3><%= link_to 'New Picture', '/water_treatment/commercial/office/water_coolers/new' %></h3>
<% end %>

<% @water_coolers.each do |cooler| %>
  <div class='images'>
    <%= link_to image_tag(cooler.water_cooler_pic.url(:medium)), cooler.water_cooler_pic.url, rel: 'lightbox' %>
    <% if current_user %>
      <h4><%= link_to 'DELETE', "/water_treatment/commercial/office/water_coolers/#{cooler.id}", method: :delete, data: { confirm: 'Are you sure?' } %></h4>
    <% end %>
  </div>
<% end %>
<h1 class='back'><%= link_to 'Back', '/water_treatment/commercial/office' %></h1>

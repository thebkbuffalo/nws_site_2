<h1>Basement RO</h1>
<% if current_user %>
  <h3><%= link_to 'New Pictures', '/water_treatment/reverse_osmosis/basements/new' %></h3>
<% end %>

<% @basements.each do |basement| %>
  <%= image_tag(basement.basement_pic.url(:medium)) %>
  <% if current_user %>
    <h4><%= link_to 'DELETE', "/water_treatment/reverse_osmosis/basements/#{basement.id}", method: :delete, data: { confirm: 'Are you sure?' } %></h4>
  <% end %>
<% end %>

<h1 class='back'><%= link_to 'Back', '/water_treatment/reverse_osmosis' %></h1>

<h1>FLOOD PREVENTION</h1>

<% if current_user %>
  <h3><%= link_to 'New Picture', '/flood_preventions/new' %></h3>
<% end %>

<% @flood_preventions.each do |flood| %>
  <div class='images'>
    <%= link_to image_tag(flood.flood_pic.url(:medium)), flood.flood_pic.url, rel: "lightbox" %>
    <% if current_user %>
      <h4><%= link_to 'DELETE', "/flood_preventions/#{flood.id}", method: :delete, data: { confirm: 'Are you sure?' } %></h4>
    <% end %>
  </div>
<% end %>

<h1 class='back'><%= link_to 'Back', '/' %></h1>

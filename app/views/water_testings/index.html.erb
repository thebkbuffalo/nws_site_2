<h1 class="text-center">WATER TESTING</h1>

<% if current_user %>
  <h3><%= link_to 'New Picture', '/water_testings/new' %></h3>
<% end %>

<% @water_testings.each do |water| %>
  <div class='images'>
    <%= link_to image_tag(water.water_testing_pic.url(:medium)), water.water_testing_pic.url, rel: 'lightbox' %>
    <% if current_user %>
      <h4><%= link_to 'DELETE', "/water_testings/#{water.id}", method: :delete, data: { confirm: 'Are you sure?' } %></h4>
    <% end %>
  </div>
<% end %>

<h1 class='back'><%= link_to 'Back', '/' %></h1>
